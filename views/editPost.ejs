<%- include mgtHeader %>
    <div class="container mB50">
      <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
         <div class="panel panel-default">
           <div class="panel-heading">发布文章</div>
           <div class="panel-body">
             <form role="form" method="post" enctype='multipart/form-data'>
              <input type="hidden" name="_id" value="<%= post._id %>">
              <div class="form-group">
                <label>标题</label>
                <input name="title" type="text" class="form-control" placeHolder="请输入文章标题" value="<%=post.title %>">
              </div>
              <div class="form-group">
                <label>分类</label>
                <select name="category" class="form-control" >
                  <option value="program" selected=<%= post.category==='program' %>>编程</option>
                  <option value="study" selected=<%= post.category==='study' %>>读书</option>
                </select>
              </div>
              <div class="form-group">
                <label>题图</label>
                <img src="<%= post.titleImgPath %>">
              </div>
              <div class="form-group">
                <label>更换题图</label>
                <input type="file" name="titleImage" value="更换题图">
              </div>
              <div class="form-group">
                <label>标签</label>
                <input type="text" name="tag1" class="form-control w200 inline-bolck" value="<%= post.tags[0]===undefined ? '' : post.tags[0] %>"/>
                <input type="text" name="tag2" class="form-control w200 inline-bolck" value="<%= post.tags[1]===undefined ? '' : post.tags[1] %>"/>
                <input type="text" name="tag3" class="form-control w200 inline-bolck" value="<%= post.tags[2]===undefined ? '' : post.tags[2] %>"/>
              </div>
              <div id="editor"></div>
              <input type="hidden" id="content" name="content" value="<%= post.content %>">
             <!--  <div class="form-group">
                <label>正文</label>
                <textarea name="content" class="form-control" row="20" style="height:300px;"><%=post.content %></textarea>
              </div> -->
              <button id="submit" type="submit" class="btn btn-primary">修改</button>
            </form>
           </div>
         </div>
        </div>
      </div>
    </div>
  </div>
  <%- include footer %>

  <script src="/javascripts/summernote.min.js"></script>
  
  <script type="text/javascript">
  $(function(){
    $('#editor').summernote({
      height : 300
    });
    $('#editor').code($('#content').val());
    $('#submit').click(function(){
      $('#content').val($('#editor').code());
    });
  });
  </script>
</body>
</html>