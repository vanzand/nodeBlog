<%- include header %>

    <div class="container mB50">
      <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
          <article class="post">
            <h2><a href="/p/<%= post._id %>"><%= post.title %></a></h2>
            <div class="meta">
              <time><%= post.time.minute %></time>
              <span class="label label-success">
                <a href="#comments"><span class="ds-thread-count" data-thread-key="<%= post._id %>" data-count-type="comments"></span></a>
              </span>
              <span class="label label-success"><%= post.pv || 0 %>人阅读</span>
            </div>
            <div><%- post.content %></div>
          </article>
          <div id="comments">
            <div data-thread-key="<%= post._id %>" data-title="<%= post.title %>" data-category="<%= post.category %>" data-author-key="<%= post.username %>" class="ds-thread" id="ds-thread">
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <%- include footer %>

  <script type="text/javascript">
  var duoshuoQuery = {short_name:"vanzand"};
  (function() {
    var ds = document.createElement('script');
    ds.type = 'text/javascript';ds.async = true;
    ds.src = 'http://static.duoshuo.com/embed.js';
    ds.charset = 'UTF-8';
    (document.getElementsByTagName('head')[0] 
    || document.getElementsByTagName('body')[0]).appendChild(ds);

  })();
  </script> 

  </body>
</html>