<%- include header %>
  <!-- 遍历列出最近的文章 -->
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-10 col-md-offset-1">
        <% posts.forEach(function (post, index){ %>
          <article class="post">
            <p><h2><a href="/p/<%= post._id %>"><%= post.title %></a></h2></p>
            <p class="info">
              作者：<a href="#"><%= post.name %></a> | 
              日期：<%= post.time.minute %>  |
              分类：<%= post.tag %>
            </p>
            <p><%- post.content %></p>
          </article>
        <% }); %>
      </div>
    </div>
  </div>
<%- include footer %>
  