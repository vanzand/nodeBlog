<%- include header %>
  <!-- 遍历列出最近的文章 -->
    <div class="container mB50">
      <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
          <% posts.forEach(function (post, index){ %>
            <article class="post">
              <h2><a href="/p/<%= post._id %>"><%= post.title %></a></h2>
              <div class="meta">
                <time><%= post.time.minute %></time>
                <span class="label label-success">
                  <a href="#"><span class="ds-thread-count" data-thread-key="<%= post._id %>" data-count-type="comments"></span></a>
                </span>
                <span class="label label-success"><%= post.pv || 0 %>人阅读</span>
              </div>
              <div class="content">
                <% if(post.titleImgPath != '') { %>
                <img src="<%= post.titleImgPath %>" class="img-thumbnail" alt="">
                <% } %>
                <p><%- post.excerpt %></p>
              </div>
              <div>
                <a href="/p/<%= post._id %>" class="btn btn-primary">阅读全文</a>
              </div>
            </article>
          <% }); %>
          <% if( !isFirstPage || !isLastPage) { %>
          <article class="post">
            <ul class="pager">
              <% if( !isFirstPage) { %>
              <li class="previous"><a href="/?p=<%= (page -1) %>&category=<%= category %>">&larr; 上一页</a></li>
              <% } else { %>
              <li class="previous disabled"><a href="javascript:;" disabled>&larr; 上一页</a></li>
              <% } %>
              <% if( !isLastPage) { %>
              <li class="next"><a href="/?p=<%= (page +1) %>&category=<%= category %>">下一页 &rarr;</a></li>
              <% } else { %>
              <li class="next disabled"><a href="javascript:;" disabled>下一页 &rarr;</a></li>
              <% } %>
            </ul>
          </article>
          <% } %>
          <article></article>
        </div>
      </div>
    </div>
  </div>

  <%- include footer %>
  
  <script type="text/javascript">
  var duoshuoQuery = {short_name:"vanzand"};
  (function() {
      var ds = document.createElement('script');
      ds.type = 'text/javascript';ds.async = true;
      ds.src = 'http://static.duoshuo.com/embed.js';
      ds.charset = 'UTF-8';
      (document.getElementsByTagName('head')[0] 
      || document.getElementsByTagName('body')[0]).appendChild(ds);
  })();
  </script>
</body>
</html>
  