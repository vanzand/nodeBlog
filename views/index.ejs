<%- include header %>
  <!-- 遍历列出最近的文章 -->
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-10 col-md-offset-1">
        <% posts.forEach(function (post, index){ %>
          <article class="post">
            <h2><a href="/p/<%= post._id %>"><%= post.title %></a></h2>
            <div class="meta">
              <time><%= post.time.minute %></time>
              <span class="label label-success">
                <a href="#"><span class="ds-thread-count" data-thread-key="<%= post._id %>" data-count-type="comments"></span></a>
              </span>
              <span class="label label-success"><%= post.pv || 0 %>人阅读</span>
            </div>
            <img src="<%= post.titleImgPath %>" class="img-thumbnail">
            <p><%- post.excerpt %></p>
            <a href="/p/<%= post._id %>" class="btn btn-primary">阅读全文</a>
          </article>
        <% }); %>
        <% if( !isFirstPage || !isLastPage) { %>
        <article class="post">
          <ul class="pager">
            <% if( !isFirstPage) { %>
            <li class="previous"><a href="/?p=<%= (page -1) %>&category=<%= category %>">&larr; 上一页</a></li>
            <% } else { %>
            <li class="previous disabled"><a href="javascript:;" disabled>&larr; 上一页</a></li>
            <% } %>
            <% if( !isLastPage) { %>
            <li class="next"><a href="/?p=<%= (page +1) %>&category=<%= category %>">下一页 &rarr;</a></li>
            <% } else { %>
            <li class="next disabled"><a href="javascript:;" disabled>下一页 &rarr;</a></li>
            <% } %>
          </ul>
        </article>
        <% } %>
        <article></article>
      </div>
    </div>
  </div>
  
  <footer>
  </footer>

  <a id="gotop" href="#">   
    <span>▲</span> 
  </a>

  <script src="http://libs.baidu.com/jquery/1.9.0/jquery.js"></script>
  <script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
  
  <script type="text/javascript">
  $(function(){
    $(window).scroll(function(){  //只要窗口滚动,就触发下面代码 
      var scrollt = document.documentElement.scrollTop + document.body.scrollTop; //获取滚动后的高度 
      if( scrollt >600 ){  //判断滚动后高度超过600px,就显示  
        $("#gotop").fadeIn(400); //淡出     
      }else{      
        $("#gotop").stop().fadeOut(400); //如果返回或者没有超过,就淡入.必须加上stop()停止之前动画,否则会出现闪动   
      }
    });
    $("#gotop").click(function(){ //当点击标签的时候,使用animate在200毫秒的时间内,滚到顶部
        $("html,body").animate({scrollTop:"0px"},200);
    });
  });
  var duoshuoQuery = {short_name:"vanzand"};
  (function() {
      var ds = document.createElement('script');
      ds.type = 'text/javascript';ds.async = true;
      ds.src = 'http://static.duoshuo.com/embed.js';
      ds.charset = 'UTF-8';
      (document.getElementsByTagName('head')[0] 
      || document.getElementsByTagName('body')[0]).appendChild(ds);
  })();
  </script>
</body>
</html>
  