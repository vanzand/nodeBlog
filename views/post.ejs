<%- include mgtHeader %>

    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
          <article class="post">
            <form role="form" method="post">
              <div class="form-group">
                <label>标题</label>
                <input name="title" type="text" class="form-control" placeHolder="请输入文章标题">
              </div>
              <div class="form-group">
                <label>分类</label>
                <select name="tag" class="form-control">
                  <option value="program">编程</option>
                  <option value="study">读书</option>
                </select>
              </div>
              <div class="form-group">
                <label>正文</label>
                <textarea name="content" class="form-control" row="20" style="height:300px;"></textarea>
              </div>
              <button class="btn btn-default">预览</button>
              <button type="submit" class="btn btn-primary">发布</button>
            </form>
          </article>
        </div>
      </div>
    </div>
<%- include footer %>