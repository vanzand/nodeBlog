<%- include mgtHeader %>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-10 col-md-offset-1">
         <div class="panel panel-default">
           <div class="panel-heading">发布文章</div>
           <div class="panel-body">
             <form role="form" method="post" enctype='multipart/form-data' id="post_form">
              <div class="form-group">
                <label>标题</label>
                <input name="title" type="text" class="form-control" placeHolder="请输入文章标题">
              </div>
              <div class="form-group">
                <label>分类</label>
                <select name="category" class="form-control">
                  <option value="program">编程</option>
                  <option value="study">读书</option>
                </select>
              </div>
              <div class="form-group">
                <label>题图</label>
                <input type="file" name="titleImage">
              </div>
              <div class="form-group">
                <label>标签</label>
                <input type="text" name="tag1" class="form-control w200 inline-bolck"/>
                <input type="text" name="tag2" class="form-control w200 inline-bolck"/>
                <input type="text" name="tag3" class="form-control w200 inline-bolck"/>
              </div>
              <div class="form-group">
                <label>正文</label>
                <textarea name="content" class="form-control" row="20" style="height:300px;"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">发布</button>
            </form>
           </div>
         </div>
        </div>
      </div>
    </div>
<%- include footer %>